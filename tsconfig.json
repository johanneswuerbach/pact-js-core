{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "removeComments": true,
    "noLib": false,
    "sourceMap": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "noUnusedLocals": true,
    "outDir": "dist"
  },
  "include": ["**/*.ts", "src/consumerFfi.js"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/__mocks__", "dist"],
  "compileOnSave": false
}
